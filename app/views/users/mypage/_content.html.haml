.content
  %section.user-icon
    = link_to root_path do
      %figure
        = image_tag "/sample-avatar.jpg", height: '60', width: '60'
      %h2.bold
        = @user.nickname
      .user-icon__number
        %div
          評価
          %span.bold
            0
        %div
          出品数
          %span.bold
            0

  %section.tab-container-notification-todo
